{
  "name": "gut-cli",
  "version": "0.1.32",
  "description": "Git Utility Tool - AI-powered git commands for smarter workflows",
  "type": "module",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js"
    },
    "./cli": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "gut": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src --write",
    "check": "biome check src",
    "check:fix": "biome check src --write",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "git",
    "cli",
    "utility",
    "ai",
    "commit",
    "review",
    "diff",
    "gemini",
    "openai",
    "anthropic",
    "gitton"
  ],
  "author": "godai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitton-dev/gut.git"
  },
  "bugs": {
    "url": "https://github.com/gitton-dev/gut/issues"
  },
  "homepage": "https://github.com/gitton-dev/gut#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    ".gut"
  ],
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "ai": "^4.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "keytar": "^7.9.0",
    "ollama-ai-provider": "^1.2.0",
    "ora": "^8.1.0",
    "simple-git": "^3.27.0",
    "zod": "^3.23.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}

{
  "name": "gut-cli",
  "version": "0.1.14",
  "description": "Git Utility Tool - AI-powered git commands for smarter workflows",
  "type": "module",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js"
    },
    "./cli": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "gut": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "cli",
    "utility",
    "ai",
    "commit",
    "review",
    "diff",
    "gemini",
    "openai",
    "anthropic",
    "gitton"
  ],
  "author": "godai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitton-dev/gut.git"
  },
  "bugs": {
    "url": "https://github.com/gitton-dev/gut/issues"
  },
  "homepage": "https://github.com/gitton-dev/gut#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    ".gut"
  ],
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@ai-sdk/google": "^1.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "ai": "^4.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "keytar": "^7.9.0",
    "ollama-ai-provider": "^1.2.0",
    "ora": "^8.1.0",
    "simple-git": "^3.27.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.4.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  }
}
